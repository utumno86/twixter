<p id="notice"><%= notice %></p>

<div class="content">
  <h2><%= @twixt.content %></h2>
    <br>
    <small class="author">Submitted <%= time_ago_in_words(@twixt.created_at) %> ago by <%= @twixt.user.name %></small>
      <p><%= link_to 'User Profile', user_path(@twixt.user.id), 
                      class: "btn btn-small btn-primary"%>
      </p>
    </div>
 
<strong> Comments: </strong>

<% @twixt.comments.each do |comment| %>
  
  <%= comment.title %>
  <%= comment.body %>
  <% end %>
    
    
    <div class="container">
      <%= form_for([@twixt, @comment]) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title %><br>
      <%= f.label :body %>
      <%= f.text_area :body %><br>
      <%= f.submit class: "button round secondary small" %>
      <% end %>
    </div>
