<p id="notice"><%= notice %></p>

<div class="content">
  <h2><%= @twixt.content %></h2>
    <br>
    <small class="author">Submitted <%= time_ago_in_words(@twixt.created_at) %> 
      ago by <%= @twixt.user.name %></small>
      <p><%= link_to 'User Profile', user_path(@twixt.user.id), 
                      class: "btn btn-small btn-primary"%>
      </p>
    </div>
 

<h3> Comments: </h3>
<% @twixt.comments.each do |comment| %>
<div class="content">
  <h4><%= comment.author %></h4>
  <h4><%= comment.title %></h4>
  <h4><%= comment.body %></h4>
 <h5><%= comment.user %></h5>
  
    <h6><%= link_to 'Delete', twixt_comment_path(@twixt, comment), method: :delete, data: { confirm: 'Are you sure?' }
		%></h6>
  
<% end %>
</div>
    
    <div class="container">
      <%= form_for([@twixt, @comment]) do |f| %>
      <%= f.hidden_field :author, :value => current_user.id %>
      <%= f.label :body %>
      <%= f.text_area :body %><br>
      <%= f.submit class: "btn btn-small btn-primary" %>
      <%= link_to 'Back', twixts_path, class: "btn btn-small btn-primary" %>
      <% end %>
    </div>

    
