<div class="page-container">
  <span><%= link_to 'User List', users_path, class: "btn btn-small btn-primary" %> 
  </span>
  <% unless current_user.blank? %>
  <span><%= link_to 'Your Timeline', timeline_path(current_user.id), class: "btn btn-small btn-primary" %>
  </span>
  <% end %>
	<span><%= form_tag("/search", method: "get") do %>
            <%= label_tag(:word, "Search for:") %>
				<%= text_field_tag(:word) %>
				<%= submit_tag("Search") %>
        <% end %></span>
</div>
<div class="content">
<% @twixts.each do |twixt| %>
    <div class="link row clearfix">
      <h2>
        <%=  twixt.content %><br>
        <small class="author">Submitted <%= time_ago_in_words(twixt.created_at) %> ago by <%= twixt.user.name %></small>
      </h2>
			<p><%= link_to 'User Profile', user_path(twixt.user.id), class: "btn btn-small btn-primary"
			%></p>
    </div>
<% end %>

<div class="pager">
    <%= paginate @twixts %>
  </div>
</div>